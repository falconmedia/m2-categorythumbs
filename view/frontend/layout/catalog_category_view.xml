<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="2columns-left" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="category.image" remove="true"/>
        <referenceContainer name="category.view.container">
                <block class="FalconMedia\CategoryThumbnail\Block\Categories" name="sr.category.thumbs" template="FalconMedia_CategoryThumbnail::categories.phtml">
                    <arguments>
                        <argument name="image_code" xsi:type="string">thumbnail</argument>
                        <argument name="css_class" xsi:type="string">thumbnail</argument>
                    </arguments>
                </block>
        </referenceContainer>
    </body>
</page>
